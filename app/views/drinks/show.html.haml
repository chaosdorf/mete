- model_class = Drink
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @drink.name
%p
  %strong= model_class.human_attribute_name(:bottle_size) + ':'
  %br
  = @drink.bottle_size
%p
  %strong= model_class.human_attribute_name(:caffeine) + ':'
  %br
  = @drink.caffeine
%p
  %strong= model_class.human_attribute_name(:donation_recommendation) + ':'
  %br
  = @drink.donation_recommendation
%p
  %strong= model_class.human_attribute_name(:logo_url) + ':'
  %br
  = @drink.logo_url

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), drinks_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_drink_path(@drink), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), drink_path(@drink), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
