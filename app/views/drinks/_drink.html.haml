- path = buy_user_path(@user, :drink => drink.id) if @user

.col-xs-12.col-sm-4.col-md-2.col-lg-2
  = link_to path || '#' do
    .panel.panel-default.text-center
      .panel-header
        %h6= drink.name
      .panel-body
        = image_tag drink.logo(:thumb), alt: drink.name
      .panel-footer
        =m drink.price

