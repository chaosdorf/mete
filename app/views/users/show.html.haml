- model_class = User
- content_for :actions do
  %li
    = link_to 'edit user', [:edit, @user]
  %li
    = link_to 'delete user', @user, :method => :delete, :confirm => "Really delete #{@user.name}â€™s account?"

.page-header
  %h1
    = "Hi, #{@user.name}"
    %small
      Choose your Poison!

.row
  .col-xs-3.col-sm-2.col-md-1
    = gravatar(@user)
  .col-xs-9.col-sm-10.col-md-11
    %dl.dl-horizontal
      %dt
        = model_class.human_attribute_name(:email)
      %dd
        = @user.email
      %dt
        = model_class.human_attribute_name(:balance)
      %dd
        = m @user.balance

%hr

.row
  = render @drinks, :locals => {:user => @user}
